{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "types": [
      "node",
    ],
  },
  "exclude": ["dist", "node_modules"],
  "include":[ 
    "src/**/*",
    "src/**/*.json",
  ],
}